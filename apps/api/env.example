# Rails
RAILS_MASTER_KEY=your_master_key_here
RAILS_LOG_LEVEL=info

# Clerk Authentication
# Get your secret key from: https://dashboard.clerk.com/
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Skip Clerk's automatic middleware - we verify JWT tokens manually
# This is required for API-only apps that receive bearer tokens from a frontend
CLERK_SKIP_RAILTIE=1

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=https://faregalo.com

# Host authorization - comma-separated list of allowed hosts
ALLOWED_HOSTS=api.faregalo.com

# Mailer
APP_DOMAIN=faregalo.com
POSTMARK_API_TOKEN=your_postmark_server_api_token
FRONTEND_URL=https://faregalo.com

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# OpenAI (Gift suggestions)
OPENAI_API_KEY=sk-your_openai_key_here
